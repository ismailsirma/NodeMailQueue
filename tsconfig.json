{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "rootDir": "./",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true
    }
}